<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/shape_album_item_bg">
    <com.example.a12972.projecting2.views.RoundRectImageView
        android:id="@+id/album_icon"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/album_icon">

        <TextView
            android:id="@+id/album_tilte_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="成为彭神的100种方法"/>
        <TextView
            android:id="@+id/album_description_tv"
            android:layout_width="262dp"
            android:layout_height="15dp"
            android:text="彭神就是yyds,彭神就是我们的光"
            android:lines="1"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#ff848484"/>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/play_info_icon"/>
                <TextView
                    android:id="@+id/album_play_count"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="234.5万"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"
                    android:textSize="7sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="29dp">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound"/>
                <TextView
                    android:id="@+id/album_content_size"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="23集"
                    android:textColor="#ff848484"
                    android:textSize="7sp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>